{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}


<div class="jumbotron" style="width: 102.8%; left: -1.3%; position: relative;">

    <h1 class="display-4">Gestion des Articles</h1>
    <hr class="my-4">
</div>

<br><br>

<a class="btn btn-primary" href="{{ path('article_new') }}">Creer un nouvelle Article</a>

<br><br>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameArticle</th>
                <th>TextArticle</th>
                <th>AdressImgArticle</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.nameArticle }}</td>
                <td>{{ article.textArticle }}</td>
                <td>{{ article.adressImgArticle }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('article_show_admin', {'id': article.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
